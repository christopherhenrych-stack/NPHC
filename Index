    <script>
        let currentRole = "";
        let currentType = ""; // 'officer', 'committee_fixed', 'committee_open'

        function openModal(role, type) {
            currentRole = role;
            currentType = type;
            document.getElementById('modalRoleName').innerText = role;
            
            // Toggle UI Elements based on type
            const selectionContainer = document.getElementById('roleSelectionContainer');
            const staticCommittee = document.getElementById('staticCommitteeText');
            const staticOfficer = document.getElementById('staticOfficerText');
            const optionChair = document.getElementById('optionChair');
            const optionMember = document.getElementById('optionMember');

            // Reset
            selectionContainer.classList.add('hidden');
            staticCommittee.classList.add('hidden');
            staticOfficer.classList.add('hidden');
            optionChair.checked = false;
            optionMember.checked = false;

            if (type === 'committee_open') {
                selectionContainer.classList.remove('hidden');
                optionMember.checked = true; // Default
            } else if (type === 'committee_fixed') {
                staticCommittee.classList.remove('hidden');
            } else {
                staticOfficer.classList.remove('hidden');
            }
            
            const modal = document.getElementById('nominationModal');
            modal.classList.remove('opacity-0');
            modal.classList.remove('pointer-events-none');
            document.body.classList.add('modal-active');
        }

        function closeModal() {
            const modal = document.getElementById('nominationModal');
            modal.classList.add('opacity-0');
            modal.classList.add('pointer-events-none');
            document.body.classList.remove('modal-active');
            
            document.getElementById('nominationForm').reset();
        }

        function submitNomination(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            let intent = "";

            if (currentType === 'officer') {
                intent = `Nomination for Office`;
            } else if (currentType === 'committee_fixed') {
                intent = `Joining Committee (Member)`;
            } else {
                // Check radio buttons
                const isChair = document.getElementById('optionChair').checked;
                intent = isChair ? `Interest in Serving as Chair` : `Joining Committee (Member)`;
            }
            
            // Construct Mailto Link
            const recipient = "nphcofhudsoncounty@gmail.com";
            const subject = encodeURIComponent(`${intent}: ${currentRole} - ${name}`);
            const body = encodeURIComponent(
                `Greetings President Henry,\n\n` +
                `I am submitting this email to express my interest regarding the ${currentRole}.\n\n` +
                `Intent: ${intent}\n` +
                `Name: ${name}\n` +
                `Email: ${email}\n\n` +
                `Fraternally/Sororally,\n${name}`
            );

            window.location.href = `mailto:${recipient}?subject=${subject}&body=${body}`;
            
            closeModal();
        }

        // Close modal if clicking outside
        const modalOverlay = document.querySelector('.modal-overlay');
        modalOverlay.addEventListener('click', closeModal);
    </script>
</body>
</html>
